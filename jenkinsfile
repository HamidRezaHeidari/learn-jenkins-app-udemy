pipeline {
    agent any

    stages {
        stage('Main') {
            steps {
                sh "echo 'Hello World'"
                sh "whoami"
                cleanWs()
                sh '''
                    mkdir -p system
                    touch system/laptop
                    echo 'Motherboard' >> system/laptop
                    cat system/laptop
                    echo 'Display' >> system/laptop
                    cat system/laptop
                    echo 'Keyboard' >> system/laptop
                    cat system/laptop
                '''
            }
        }
        stage("Test"){
            steps{
                echo 'Test Successfuly ...'
            }
        }
    }
    post{
        success{
            echo "success"
        }
    }
}
