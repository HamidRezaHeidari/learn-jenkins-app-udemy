pipeline {
    agent any

    stages {
        stage('Main') {
            steps {
                sh "echo 'Hello World'"
                sh '''
                    echo 'Hello' 
                '''
            }
        }
        stage('docker-main') {
            agent{
                docker{
                    image "python:3.10"
                    reuseNode True
                }
            }
            steps {
                sh "echo 'Hello from DOCKER'"
            }
        }

        stage("Test"){
            steps{
                echo 'Test Successfuly ...'
            }
        }
    }
    post{
        success{
            echo "success"
        }
    }
}
