pipeline {
    agent any

    stages {
        stage('Main') {

            steps {
                sh "echo 'Hello World'"
                sh '''
                    echo 'Hello' 
                '''
            }
        }

        stage('docker-main') {
            agent{
                docker{
                    image 'node:18-alpine'
                    //reuseNode True
                }
            }
            steps {
                sh "echo 'Hello from DOCKER'"
            }
        }

        stage("Test"){
            steps{
                echo 'Test Successfuly ...'
            }
        }
    }
    post{
        always{

            echo "success"
            junit 'test-results/junit.xml'
        }
    }
}
