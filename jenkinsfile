pipeline {
    agent any

    environment{
        main_var = "HELLO"
    }

    stages {
        stage('Main') {

            agent{
                docker{
                    image 'my-docker-python'
                }
            }

            steps {
                sh '''
                    echo 'Hello ...'
                    python my_python.py 
                '''
                script{
                    env.my_var = 4
                }
            }
        }

        stage('docker-main') {
            agent{
                docker{
                    image 'node:18-alpine'
                    //reuseNode True
                }
            }
            steps {
                sh "echo 'Hello from DOCKER'"
                echo env.my_var
            }
            post{
                always{
                    echo "successfully DOCKER"  
                    echo "Global VAR : $main_var"
                } 
            }

        }
        stage("approval"){
            steps{
                timeout(time:1, unit:"MINUTES"){
                    input message: "Are U Sure?", ok:"YES!"
                }
            }
        }

        stage("Test"){
            steps{
                echo 'Test Successfuly ...'
            }
        }
    }

    post{
        always{

            echo "success"
            //junit 'test-results/junit.xml'
        }
    }
}
