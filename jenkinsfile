pipeline {
    agent any

    stages {
        stage('Main') {
            agent{
                docker{
                    image 'node:18'
                    //reuseNode True
                }
            }

            steps {
                sh "echo 'Hello World'"
                sh '''
                    echo 'Hello' 
                '''
            }
        }

        stage('docker-main') {

            steps {
                sh "echo 'Hello from DOCKER'"
            }
        }

        stage("Test"){
            steps{
                echo 'Test Successfuly ...'
            }
        }
    }
    post{
        success{
            echo "success"
        }
    }
}
